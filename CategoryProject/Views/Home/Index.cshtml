@model CategoryProject.Models.HomeViewModel
@{
	    ViewData["Title"] = "Home Page";
}
<div class="col-md-6">
    <h2>New arrivals</h2>
    <div class="d-flex flex-nowrap" style="gap: 1px; overflow-x: auto;"> 
    @foreach (var product in Model.FeaturedProducts)
    {
        <div class="products" style="width: 450px; height: 380px; margin-bottom: 1px;"> 
            <img src="@product.Images" class="product-img-top" alt="@product.Name ?? "No Image"" style="width: 100%; height: auto;" /> 
            <div class="products-container">
                <h2 class="product-item-title">@product.Name</h2> 
                <h3 class="product-item-description">@product.Description</h3> 
                <p class="product-item-price">Price: @product.Price.ToString($"$ 0")</p> 
            </div>
        </div>
    }
    </div>
</div>
